---
import MainLayout from "../layout/MainLayout.astro";
import PageSectionLayout from "../layout/PageSectionLayout.astro";
import CustomBanner from "../components/CustomBanner.astro";
import Header from "../components/Header.astro";
import DownButton from "../components/DownButton.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ProjectGrid from "../layout/ProjectGrid.astro";
---

<MainLayout>
	<Header />

	<PageSectionLayout id="home">
		<CustomBanner />
	</PageSectionLayout>
	<PageSectionLayout id="projects">
		<ProjectGrid>
			<ProjectCard
				description="This API provides Don't Starve Together information"
				github="https://github.com/MauroMontan/dont-starve-together-api"
				link="https://dont-starve-together-api.xyz"
				urlImage="https://github.com/MauroMontan/dont-starve-together-assets/raw/main/banner.png"
				title="Don't Starve Together Api"
				tags={[
					"Typescript",
					"Go",
					"GraphQl",
					"NestJs",
					"Astro",
					"Vue",
					"Deta",
					"Go Fiber",
				]}
			/>
			<ProjectCard
				title="Artist Showcase"
				description="Website optimized for large files load"
				github="https://github.com/MauroMontan/artist-showcase"
				link="https://mauromontan.github.io/artist-showcase/"
				urlImage="https://raw.githubusercontent.com/MauroMontan/artist-showcase/main/screenshots/artist-showcase.png"
				tags={["Typescript", "Vue 3", "Pinia"]}
			/>
			<ProjectCard
				title="Twitch chat overlay"
				github="https://github.com/MauroMontan/twitch-chat-overlay"
				link="https://github.com/MauroMontan/twitch-chat-overlay"
				urlImage="https://github.com/MauroMontan/twitch-chat-overlay/raw/main/screenshots/chat-overlay-example.png"
				description="Chat overlay for twich app"
				tags={["Javascript", "Electron.Js", "HTML", "CSS3"]}
			/>
			<ProjectCard
				description="Concept vaccine page"
				github="https://github.com/MauroMontan/vaccine-page"
				link="https://mauromontan.github.io/vaccine-page/"
				urlImage="https://github.com/MauroMontan/vaccine-page/raw/main/screenshots/screenshot.png"
				title="Vaccination page mock"
				tags={["HTML5", "CSS3"]}
			/>
			<ProjectCard
				description="Text editor with autosave functionality"
				github="https://github.com/MauroMontan/simple-text-editor"
				link="https://github.com/MauroMontan/simple-text-editor"
				urlImage="https://camo.githubusercontent.com/f252ea4216ee12fac2c24cd9c6a1289b06191abd968a966b5a54b6fd9a81bbc4/68747470733a2f2f692e696d6775722e636f6d2f356a43336837772e706e67"
				title="Simple Text Editor"
				tags={["Dart", "Flutter"]}
			/>
			<ProjectCard
				description="Arch linux config files for hyperland"
				github="https://github.com/MauroMontan/dotfiles"
				link="https://github.com/MauroMontan/dotfiles"
				urlImage="https://user-images.githubusercontent.com/68311575/192690570-0682289a-905d-4950-810d-f34daad5576e.png"
				title="Hyperland tiling manager dotfiles"
				tags={["lua", "python", "bash", "CSS"]}
			/>
		</ProjectGrid>
	</PageSectionLayout>
	<DownButton />
</MainLayout>
