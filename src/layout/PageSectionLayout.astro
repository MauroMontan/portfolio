---
let { id } = Astro.props;
---

<section id={id} class="page-section">
  <slot />
</section>

<style>
  .page-section {
    display: flex;
    width: 100%;

    scroll-snap-align: start;
    height: 100vh;
  }

  @media (max-width: 768px) {
    .page-section {
      height: max-content;
    }
  }
</style>
