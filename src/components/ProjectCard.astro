---
const { tags, title, urlImage, github, link, description } = Astro.props;
---

<section class="project-card">
  <div class="toolbar">
    <h1>{title}</h1>

    <div class="actions">
      <a class="open-link fa-brands fa-github" href={github} target="_blank"
      ></a>
      <a
        href={link}
        target="_blank"
        class="open-link fa-solid fa-up-right-from-square"></a>
    </div>
  </div>
  <div class="content">
    <img loading="eager" decoding="async" class="img-over" src={urlImage} />
    <img
      loading="eager"
      decoding="async"
      class="img-background"
      src={urlImage}
    />
    <div class="description">
      <p>
        {description}
      </p>
    </div>
  </div>
  <ul class="tags">
    {tags.map((e) => <li class="tag">{e}</li>)}
  </ul>
</section>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    min-width: 27rem;
    max-width: 27rem;
    margin: auto;
    height: 32rem;
    background-color: rgb(143, 140, 168, 0.1);
    border-radius: 1rem;
    scroll-snap-align: center;
    padding: 1.5rem;
    gap: 1rem;
    overflow: hidden;
    border: var(--border);
    box-shadow: 24px 16px 64px 0 rgba(0, 0, 0, 0.08);
    transition: all ease 0.3s;
  }

  .project-card:nth-child(odd) {
  }
  .hide-card {
    display: none;
  }

  .project-card:hover {
    transform: translate3d(0px, 0px, -250px);
  }

  p {
    margin: 0.3rem;
    font-size: 0.9rem !important;
    background-color: rgb(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-radius: 0.4rem;
    padding: 0.5rem;
  }
  .tag {
    border: var(--border);
    color: #e3bebb;
    box-shadow: 24px 16px 64px 0 rgba(0, 0, 0, 0.08);

    height: fit-content;
    list-style: none;
    width: fit-content;
    padding-inline: 0.5rem;
    padding-block: 0.2rem;
    border-radius: 0.3rem;
  }

  .toolbar {
    height: fit-content;
    display: flex;
    width: 100%;
    margin: auto;
    justify-content: space-between;
  }

  .actions {
    width: fit-content;
    display: flex;
    gap: 1rem;
  }

  .content {
    display: flex;
    height: 100%;
    width: 100%;
    gap: 1rem;
    border: var(--border);
    border-radius: 0.5rem;
    margin: auto;
    background: var(--url);
    background-position: center;
    background-repeat: no-repeat;
    align-self: normal;
    backdrop-filter: blur(3rem);
    position: relative;
    overflow: hidden;
  }

  .tags {
    max-height: max-content;
    width: 100%;
    display: flex;
    margin: auto;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: start;
    align-items: center;
  }

  .img-background {
    display: flex;
    height: 100%;
    position: absolute;
    filter: blur(2rem);
  }

  .open-link {
    font-weight: bold;
    text-decoration: none;
    color: #aba289;
  }

  .description {
    height: fit-content;
    max-height: 5rem;
    width: 100%;
    margin: auto;
    position: absolute;
    display: flex;
    left: 0;
    bottom: 0;
    z-index: 10;
  }

  .img-over {
    height: 100%;
    width: 100%;
    object-fit: cover;
    z-index: 2;
    transition: all ease-in 0.5s;
  }

  .img-over:hover {
    object-fit: contain;
  }

  @keyframes floatDown {
    0% {
      transform: translateY(-0.5rem);
    }
    50% {
      transform: translateY(0rem);
    }
    100% {
      transform: translateY(0.5);
    }
  }
</style>
