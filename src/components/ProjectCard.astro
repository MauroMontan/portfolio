---
const { tags, title, urlImage, github, link, description } = Astro.props;
---

<section class="project-card">
  <div class="toolbar">
    <h1>{title}</h1>

    <div class="actions">
      <a class="open-link fa-brands fa-github" href={github} target="_blank"
      ></a>
      <a
        href={link}
        target="_blank"
        class="open-link fa-solid fa-up-right-from-square"></a>
    </div>
  </div>
  <div class="content">
    <img loading="lazy" decoding="async" class="img" src={urlImage} />
    <div class="description">
      <p>
        {description}
      </p>
    </div>
  </div>
  <ul class="tags">
    {tags.map((e) => <li class="tag">{e}</li>)}
  </ul>
</section>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    background-color: #11131e;
    border-radius: 0.5rem;
    overflow: hidden;
    border: var(--border);
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px -1px,
      rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;
  }

  p {
    margin: 0.3rem;
    font-size: 0.9rem !important;
    background-color: rgb(0, 0, 0, 0.5);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-radius: 0.4rem;
    padding: 0.5rem;
  }
  .tag {
    border: var(--border);
    color: #c0a8ed;
    height: fit-content;
    list-style: none;
    width: fit-content;
    padding-inline: 0.5rem;
    padding-block: 0.2rem;
    border-radius: 0.3rem;
  }

  .toolbar {
    height: 12%;
    display: flex;
    align-items: center;
    width: 90%;
    margin: auto;
    justify-content: space-between;
  }

  .actions {
    width: fit-content;
    display: flex;
    gap: 1rem;
  }

  .content {
    display: flex;
    height: 65%;
    width: 90%;
    gap: 1rem;
    border: var(--border);
    border-radius: 0.5rem;
    margin: auto;
    position: relative;
    overflow: hidden;
  }

  .tags {
    height: fit-content;
    width: 90%;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
    padding: 0.2rem;
    gap: 0.4rem;
    justify-content: start;
    align-items: center;
  }

  .open-link {
    font-weight: bold;
    text-decoration: none;
    color: #aba289;
  }

  .description {
    height: fit-content;
    max-height: 5rem;
    width: 100%;
    margin: auto;
    position: absolute;
    display: flex;
    left: 0;
    bottom: 0;
  }

  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center;
    transition: all ease 0.4s;
  }

  img:hover {
    transform: scale(120%);
  }
</style>
