---
import cvArrow from "../assets/cv-arrow.png";
---

<button class="resume-button"> resume</button>
<img src={cvArrow} alt="cv arrow" />
<style>
  .resume-button {
    position: absolute;
    border: var(--border);
    background-color: #c5a7f2;
    color: #111119;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.3rem;
    z-index: 8;
    padding: 0.5rem;
    right: 1rem;
    bottom: -1rem;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px -1px,
      rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;
  }

  img {
    width: 10rem;
    height: 10rem;
    position: absolute;
    bottom: -12rem;
    right: 1rem;
    opacity: 0.3;
    animation: draw 3s;
  }
</style>
